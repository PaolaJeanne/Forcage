// src/models/Notification.js
const mongoose = require('mongoose');

const notificationSchema = new mongoose.Schema({
  utilisateur: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'User',
    required: true
  },
  type: {
    type: String,
    enum: [
      'info', 'warning', 'success', 'error',
      'demande_creation', 'demande_validation', 'demande_rejet',
      'document_upload', 'audit_alert', 'system'
    ],
    default: 'info'
  },
  titre: {
    type: String,
    required: true
  },
  message: {
    type: String,
    required: true
  },
  entite: {
    type: String,
    enum: ['demande', 'utilisateur', 'document', 'audit', 'system']
  },
  entiteId: {
    type: mongoose.Schema.Types.ObjectId
  },
  lien: {
    type: String  // URL pour redirection
  },
  lue: {
    type: Boolean,
    default: false
  },
  lueAt: {
    type: Date
  },
  priorite: {
    type: String,
    enum: ['basse', 'moyenne', 'haute', 'urgente'],
    default: 'moyenne'
  },
  metadata: {
    type: mongoose.Schema.Types.Mixed
  }
}, {
  timestamps: true
});

// Index pour performances
notificationSchema.index({ utilisateur: 1, lue: 1, createdAt: -1 });
notificationSchema.index({ type: 1, createdAt: -1 });

const Notification = mongoose.model('Notification', notificationSchema);

module.exports = Notification;